{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type":"object",
    "properties": {
        "talks": {
            "type": "array",
            "items": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "startTime": {
                    "type": "string",
                    "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
                },
                "endTime": {
                    "type": "string",
                    "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
                },
                "type": {
                    "type": "string"
                },
                "roomName": {
                    "type": "string"
                },
                "roomLocation": {
                    "type": "string"
                },
                "speakers": {
                    "type": "array",
                    "items": {
                        "name": {
                            "type": "string"
                        },
                        "avatar": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        },
                        "bio": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
